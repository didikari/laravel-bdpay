{
  "name": "bdpay/laravel-bdpay",
  "description": "Laravel package for BDPay payment gateway integration",
  "type": "library",
  "license": "MIT",
  "version": "1.1.0",
  "keywords": [
    "laravel",
    "bdpay",
    "payment",
    "gateway",
    "indonesia",
    "virtual-account",
    "disbursement",
    "webhook",
    "payment-processing"
  ],
  "authors": [
    {
      "name": "Didik Ariyanto",
      "email": "didikariyanto301@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0",
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "mockery/mockery": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "BDPay\\LaravelBDPay\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BDPay\\LaravelBDPay\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "BDPay\\LaravelBDPay\\BDPayServiceProvider"
      ],
      "aliases": {
        "BDPay": "BDPay\\LaravelBDPay\\Facades\\BDPay"
      }
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
